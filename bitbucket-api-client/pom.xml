<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
<modelVersion>4.0.0</modelVersion>

<parent>
<artifactId>bitbucket-api-client-parent</artifactId>
<groupId>org.vx68k.bitbucket</groupId>
<version>5.0-alpha.5</version>
</parent>

<artifactId>bitbucket-api-client</artifactId>
<packaging>bundle</packaging>
<name>Bitbucket API Client</name>
<description>Client implementation for the Bitbucket API.</description>

<licenses>

<license>
<name>GNU General Public License</name>
<url>https://www.gnu.org/licenses/gpl.txt</url>
<distribution>repo</distribution>
<comments>Version 3 or any later version.</comments>
</license>
</licenses>

<dependencies>

<dependency>
<groupId>javax.ws.rs</groupId>
<artifactId>javax.ws.rs-api</artifactId>
</dependency>

<dependency>
<groupId>javax.json</groupId>
<artifactId>javax.json-api</artifactId>
</dependency>

<dependency>
<groupId>junit</groupId>
<artifactId>junit</artifactId>
<scope>test</scope>
</dependency>

<dependency>
<groupId>javax.activation</groupId>
<artifactId>javax.activation-api</artifactId>
<scope>test</scope>
</dependency>

<dependency>
<groupId>org.glassfish</groupId>
<artifactId>javax.json</artifactId>
<scope>test</scope>
</dependency>

<dependency>
<groupId>org.glassfish.jersey.core</groupId>
<artifactId>jersey-client</artifactId>
<scope>test</scope>
</dependency>
</dependencies>

<build>

<plugins>

<plugin>
<groupId>org.apache.maven.plugins</groupId>
<artifactId>maven-jar-plugin</artifactId>
<configuration>
<archive>
<manifestEntries>
<Automatic-Module-Name>org.vx68k.bitbucket.api.client</Automatic-Module-Name>
</manifestEntries>
</archive>
</configuration>
</plugin>

<plugin>
<groupId>org.apache.felix</groupId>
<artifactId>maven-bundle-plugin</artifactId>
<extensions>true</extensions>
<configuration>
<instructions>
<Bundle-SymbolicName>org.vx68k.bitbucket.api.client</Bundle-SymbolicName>
<Export-Package>org.vx68k.bitbucket.api, org.vx68k.bitbucket.api.client</Export-Package>
<Private-Package>org.vx68k.bitbucket.api.client.*</Private-Package>
</instructions>
</configuration>
</plugin>
</plugins>
</build>
</project>
